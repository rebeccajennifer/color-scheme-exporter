{ "version":        "0.2.0"

, "configurations":
  [ { "name"    : "all-default-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "all"
      , "--name"        , "default"
      , "--out_dir"     , "${workspaceFolder}/sample-themes/default"
      ]
    }
  , { "name"    : "all-flux-bunny-dark-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "-s" , "all"
      , "-f" , "sample-themes/flux-bunny-dark/flux-bunny-dark-input.json"
      , "-n" , "flux-bunny-dark"
      , "-o" , "${workspaceFolder}/sample-themes/flux-bunny-dark"
      ]
    }
  , { "name"    : "all-flux-bunny-lite-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "all"
      , "--file"        , "sample-themes/flux-bunny-lite/flux-bunny-lite-input.json"
      , "--name"        , "flux-bunny-lite"
      , "--out_dir"     , "${workspaceFolder}/sample-themes/flux-bunny-lite"
      ]
    }
  , { "name"    : "out-dir-only"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args"    :
      [ "--scheme_type" , "mintty"
      , "--file"        , "sample-themes/flux-bunny-dark-bright/flux-bunny-dark-bright-input.json"
      , "--out_dir"     , "${workspaceFolder}"
      ]
    }
  , { "name"    : "default"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args"    :
      [ "--default"
      , "--scheme_type" , "all"
      , "--name"        , "default"
      , "--out_dir"     , "${workspaceFolder}/sample-themes/default"
      ]
    }
  , { "name"    : "replace-color-labels-test"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/replace_color_labels.py"
    , "console" : "integratedTerminal"
    }
  , { "name"      : "test-rgb-color"
    , "type"      : "debugpy"
    , "request"   : "launch"
    , "module"    : "pytest"
    , "args"      : [ "test"]
    , "justMyCode": false
    , "console"   : "integratedTerminal"
    }
  , { "name"    : "gnome-demo"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "gnome"
      , "--file"        , "sample-themes/demo/input.json"
      , "--name"        , "flux-test"
      , "--out_dir"     , "~/.themes/"
      ]
    }
  , { "name"    : "vscode-theme"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "-s" , "vscode-scheme"
      , "-f" , "sample-themes/flux-bunny-dark/flux-bunny-dark-input.json"
      , "-n" , "flux-bunny-dark"
      , "-o" , "${workspaceFolder}/sample-themes/flux-bunny-dark"
      ]
    }
  ]
}
